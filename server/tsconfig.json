{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "skipLibCheck": true, // don't type check declaration files
    "esModuleInterop": true,

    // build
    "outDir": "./dist",
    "rootDir": "./src",

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    // "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
